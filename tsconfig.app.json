{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Modo bundler para Vite */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting/estrictos (ajustados a tu proyecto) */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Alias @ -> src */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Tipos necesarios para Vite (import.meta, etc.) */
    "types": ["vite/client"]
  },

  /* Archivos incluidos de la app */
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}
