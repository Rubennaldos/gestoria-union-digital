{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // ✅ añade tipos y resolución para que Vite/Node estén disponibles
    "types": ["vite/client", "node"],
    "moduleResolution": "Bundler", // (alternativa aceptable: "NodeNext")

    // lo que ya tenías
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
